<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permiso para acceder a Internet (requerido para consumir servicios web) -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppClinicaMedicaSaludplus">

        <!-- Punto 3: LoginActivity como pantalla de inicio -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppClinicaMedicaSaludplus">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Menú principal (ya no es el launcher) -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppClinicaMedicaSaludplus" />

        <!-- Clientes y Pedidos (servicios.campus.pe) -->
        <activity
            android:name=".ClientesActivity"
            android:exported="false"
            android:label="Clientes"
            android:theme="@style/Theme.AppClinicaMedicaSaludplus" />

        <activity
            android:name=".PedidosActivity"
            android:exported="false"
            android:label="Pedidos"
            android:theme="@style/Theme.AppClinicaMedicaSaludplus" />

        <!-- Doctores lista simple (XAMPP propio) -->
        <activity
            android:name=".DoctoresActivity"
            android:exported="false"
            android:label="Doctores"
            android:theme="@style/Theme.AppClinicaMedicaSaludplus" />

        <!-- Punto 2: Maestro - Lista de Especialidades (XAMPP propio) -->
        <activity
            android:name=".EspecialidadesActivity"
            android:exported="false"
            android:label="Especialidades"
            android:theme="@style/Theme.AppClinicaMedicaSaludplus" />

        <!-- Punto 2: Detalle - Doctores por Especialidad (GET con parámetro) -->
        <activity
            android:name=".DoctoresEspecialidadActivity"
            android:exported="false"
            android:label="Doctores por Especialidad"
            android:theme="@style/Theme.AppClinicaMedicaSaludplus" />

    </application>

</manifest>
